<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20260203-01-create-admins" author="network-team">
        <createTable tableName="admins">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(20)" defaultValue="ADMIN"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="20260203-02-add-admin-id-to-services" author="network-team">
        <addColumn tableName="ussd_service">
            <column name="admin_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseColumnNames="admin_id"
                                 baseTableName="ussd_service"
                                 constraintName="fk_service_admin"
                                 referencedColumnNames="id"
                                 referencedTableName="admins"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
