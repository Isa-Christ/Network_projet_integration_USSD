<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="002-create-ussd-sessions" author="network-project-team">

        <!-- ✅ Évite le crash si la table existe déjà -->
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ussd_sessions"/>
            </not>
        </preConditions>

        <createTable tableName="ussd_sessions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="session_id" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="phone_number" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="service_code" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>

            <column name="current_state_id" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="session_data" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>